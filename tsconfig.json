{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "**/*.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}